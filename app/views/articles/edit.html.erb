<div class="container justify-content-center">
<h1>Edit Article</h1>

<%= form_for(@article) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title%>
  <%= f.label :content%>
  <%= f.text_field :content%>
  <%= f.submit %>
<% end %>
</div>
<div class="container sm">
<%= simple_form_for (@article) do |f| %>
<%= f.input :title %>
<%= f.input :content %>
<% end %>
</div>
